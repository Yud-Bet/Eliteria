<UserControl x:Class="Eliteria.CustomControls.RoundedComboBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eliteria.CustomControls"
             mc:Ignorable="d" x:Name="this">
    <Grid>
        <ComboBox SelectionChanged="ComboBox_SelectionChanged" SelectedItem="{Binding SelectedItem, ElementName=this}" ItemsSource="{Binding ItemsSource, ElementName=this}" Style="{StaticResource RoundedComboboxStyle}"/>
    </Grid>
</UserControl>
