<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eliteria.Views"
             xmlns:CustomControls="clr-namespace:Eliteria.CustomControls" x:Class="Eliteria.Views.AddNewSaving"
             mc:Ignorable="d"             
             Background="#FFFFFF"
             Width="550"
             Height="600"
             Loaded="AddNewSaving_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!--Dòng 1-->
        <RadioButton Name="rbtnOldCustomer"  Content="Cho khách hàng cũ" HorizontalAlignment="Left" Margin="65,38,0,0" VerticalAlignment="Top" Checked="rbtnOldCustomer_Checked"/>
        <RadioButton Name="rbtnNewCustomer"  Content="Cho khách hàng mới" HorizontalAlignment="Left" Margin="223,39,0,0" VerticalAlignment="Top" Checked="rbtnNewCustomer_Checked"/>
        <TextBlock            
            Text="Số tài khoản"
            Margin="65,67,406,18"
            Visibility="Hidden"/>
        <TextBox
            Name="SavingID"
            BorderThickness="0"
            Margin="177,67,310,18"
            Visibility="Hidden"/>
        <TextBlock
            Text="Loại sổ"
            Name="SavingTypeLable"
            Margin="65,75,442,10" RenderTransformOrigin="-3.14,0.438"/>
        <ComboBox
            Style="{StaticResource RoundedComboboxStyle}"
            Name="cbxSavingtype"            
            Margin="171,55,0,0" HorizontalAlignment="Left" Width="150">
            <ComboBoxItem Content="3 tháng"/>
            <ComboBoxItem Content="6 tháng"/>
            <ComboBoxItem Content="Không kỳ hạn"/>
        </ComboBox>

        <!--Dòng 2-->
        <TextBlock 
            Grid.Row="1"
            Text="Họ và tên"
            Name="Namelabel"
            Margin="65,20,0,0"/>
        <!--Nội dung-->
        <TextBox
            Name="Fullname"
            Grid.Row="1"
            Margin="172,15,0,10"
            BorderThickness="0"
            Background="Transparent" HorizontalAlignment="Left" Width="285"/>
        <!--Đường kẻ-->
        <TextBox
            Name="CrossLine1"
            Grid.Row="1"
            Width="280"
            Height="2"
            IsReadOnly="True"
            Margin="177,33,0,16"
            Background="Black"
            BorderThickness="1"
            BorderBrush="Black" HorizontalAlignment="Left"/>


        <!--Dòng 3-->
        <TextBlock 
            Grid.Row="2"
            Text="CMND/CCCD "
            Name="IDLabel"
            Margin="65,20,0,10" HorizontalAlignment="Left" Width="79"/>
        <TextBox
            Grid.Row="2"
            Margin="172,15,0,10"
            BorderThickness="0"
            x:Name="CustomerID"
            Background="Transparent" HorizontalAlignment="Left" Width="122"/>
        <TextBox
            Name="CrossLine2"
            Grid.Row="2"
            Width="117"
            Height="2"
            IsReadOnly="True"
            Margin="177,33,0,16"
            Background="Black"
            BorderThickness="1"
            BorderBrush="Black" HorizontalAlignment="Left"/>
        <ComboBox           
            Style="{StaticResource RoundedComboboxStyle}"
            x:Name="cbxID"
            Visibility="Hidden"
            Margin="173,5,0,0" HorizontalAlignment="Left" Width="190" Grid.Row="2">
          

        </ComboBox>

        <!--Dòng 4-->
        <TextBlock 
            Name="AddressLabel"
            Grid.Row="3"
            Text="Địa chỉ"
            Margin="65,20,0,0"/>
        <TextBox
            Grid.Row="3"
            Margin="172,15,0,10"
            BorderThickness="0"
            Name="CustomerAddress"
            Background="Transparent" HorizontalAlignment="Left" Width="315"/>
        <TextBox
            Name="CrossLine3"
            Grid.Row="3"
            Width="280"
            Height="2"
            IsReadOnly="True"
            Margin="177,33,0,16"
            Background="Black"
            BorderThickness="1"
            BorderBrush="Black" HorizontalAlignment="Left"/>

        <!--Dòng 5-->
        <TextBlock 
            Name="SavingsAmountlabel"
            Grid.Row="4"
            Text="Số tiền gửi (vnđ)"
            Margin="65,20,0,0"/>
        <TextBox
            Grid.Row="4"
            Margin="172,15,0,10"
            BorderThickness="0"
            Name="SavingAmount"
            PreviewTextInput="SavingAmount_PreviewTextInput"
            Background="Transparent" HorizontalAlignment="Left" Width="315"/>
        <TextBox
            Name="CrossLine4"
            Grid.Row="4"
            Width="280"
            Height="2"
            IsReadOnly="True"
            Margin="177,33,0,16"
            Background="Black"
            BorderThickness="1"
            BorderBrush="Black" HorizontalAlignment="Left"/>

        <!--Dòng 6-->
        <TextBlock
            Name="OpenDateLabel"
            Grid.Row="5"
            Text="Ngày mở sổ"
            Margin="65,16,383,4"/>

        <CustomControls:EliteriaCalendarButton x:Name="OpenDate" HorizontalAlignment="Left" Height="41" Margin="177,4,0,0" Grid.Row="5" VerticalAlignment="Top" Width="144"/>

        <!--Dòng 7-->
        <TextBlock
            Name="EmailLabel"
            Grid.Row="6"
            Text="Email"
            Margin="65,16,383,4"/>
        <TextBox
            Grid.Row="6"
            Margin="172,15,0,10"
            BorderThickness="0"
            Name="CustomerEmail"
            Background="Transparent" HorizontalAlignment="Left" Width="303"/>
        <TextBox
            Name="CrossLine5"
            Grid.Row="6"
            Width="280"
            Height="2"
            IsReadOnly="True"
            Margin="177,33,0,16"
            Background="Black"
            BorderThickness="1"
            BorderBrush="Black" HorizontalAlignment="Left"/>

        <!--Dòng 8-->


        <TextBlock
            Name="Phonelabel"
            Grid.Row="7"
            Text="Số điện thoại"
            Margin="65,10,383,10"/>
        <TextBox            
            Grid.Row="7"
            Margin="171,10,0,15"
            BorderThickness="0"
            Name="CustomerPhoneNumber"
            PreviewTextInput="CustomerPhoneNumber_PreviewTextInput"
            Background="Transparent" HorizontalAlignment="Left" Width="123"/>
        <TextBox
            Name="CrossLine6"
            Grid.Row="7"            
            Height="2"
            IsReadOnly="True"
            Margin="176,29,0,20"
            Background="Black"
            BorderThickness="1"
            BorderBrush="Black" HorizontalAlignment="Left" Width="118"/>
        <TextBlock
            Name="GenderLabel"
            Grid.Row="7"
            Text="Giới tính"
            Margin="298,17,179,3"/>
        <ComboBox
            Style="{StaticResource RoundedComboboxStyle}"
            x:Name="cbxGender"            
            Margin="352,0,0,5" Grid.Row="7" HorizontalAlignment="Left" Width="150">
            <ComboBoxItem Content="Nam"/>
            <ComboBoxItem Content="Nữ"/>
        </ComboBox>
        <!--Dòng 9-->

        <Button
          Name="btnCreate"
          Content="Tạo sổ"
          HorizontalAlignment="Left"
          Margin="75,47,0,0"
          Grid.Row="8" 
          VerticalAlignment="Top" Width="139"
          Height="44"
          Style="{StaticResource GreenButtonTheme}" Click="btnCreate_Click"/>
        <Button 
            Content="Hủy"
            x:Name="btnCancel"
            HorizontalAlignment="Left"
            Margin="363,47,0,0"
            Grid.Row="8" 
            VerticalAlignment="Top" Width="139"
            Height="44"
            Style="{StaticResource OutlineWhiteButtonTheme}" Click="btnCancel_Click"/>
        <TextBlock 
            Name="DobLabel"
            Grid.Row="2"
            Text="Ngày sinh"
            Margin="304,20,0,10" HorizontalAlignment="Left" Width="67"/>
        <CustomControls:EliteriaCalendarButton x:Name="datepicker_DoB" HorizontalAlignment="Left" Height="41" Margin="363,8,0,0" Grid.Row="2" VerticalAlignment="Top" Width="144"/>
        <TextBlock
            Text="Mở sổ cho loại khách hàng"
            Margin="65,10,322,75" RenderTransformOrigin="-3.14,0.438"/>
       



    </Grid>
</UserControl>
