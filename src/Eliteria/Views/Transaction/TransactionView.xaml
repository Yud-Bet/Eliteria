        <ComboBox
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="85,31,90,30"
            Width="450"
            FontSize="18"
            materialDesign:HintAssist.Hint="Số tài khoản"
            IsEditable="True"
            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
            DisplayMemberPath="AccountNumber"
            ItemsSource="{Binding SavingList}"
            SelectedItem="{Binding SelectedSaving, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            />
        <TextBox
            Grid.Row="2"
            materialDesign:HintAssist.Hint="Tên khách hàng"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,0,0,0"
            Width="450"
            FontSize="18"
            Text="{Binding SelectedSaving.Name}"
            />

        <!--<TextBlock
            Text="Tên khách hàng"
            FontSize="18"
            Margin="88,51,369,30" Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" Height="30" Width="168"-->

        <!--/>-->
        <!--<TextBox 
            Grid.Row="2"
            Height="1"
            IsReadOnly="True"
            Margin="252,78,90,31"
            Background="Black"
            BorderThickness="1"
            BorderBrush="Black"-->

        <!--/>-->
