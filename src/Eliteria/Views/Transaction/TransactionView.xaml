            HorizontalAlignment="Center" 
            Height="44" Margin="252,34,90,33" Grid.Row="2" 
            TextWrapping="Wrap" 
            Text="TextBox" 
            VerticalAlignment="Center"
            FontSize="18"
            Width="283"/>-->


        <TextBox
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="90,30,313,30"
            Width="222"
            FontSize="18"
            materialDesign:HintAssist.Hint="Số tiền giao dịch"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"

            Text="{Binding TransactionMoney}"
            />


        <DatePicker
            Grid.Row="4"
            materialDesign:HintAssist.Hint="Ngày giao dịch"
            Style="{StaticResource MaterialDesignFloatingHintDatePicker}" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="18"
            Width="222"
            Margin="90,29,313,32"
            SelectedDate="{Binding TransactionDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <CheckBox
            Command="{Binding CheckPrintBill, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            x:Name="cbxPrintBill"
            Grid.Row="4"
            FontSize="18"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Width="110"
            Margin="425,0,90,32"
            IsChecked="True"
            Content="In hóa đơn"/>
        <Button
            Command="{Binding ConfirmCMD}"
            Grid.Row ="5"
            BorderBrush="White"
            Style="{StaticResource GreenButtonThemeConfirm}"
            Width="181"
            Height="50"
            FontSize="18"
            VerticalAlignment="Center"
            
            
            Margin="85,0,359,0"  />
        <Button
            Command="{Binding CancelCMD}"
            Grid.Row ="5"
            Width="181"
            Height="50"
            VerticalAlignment="Center"
            Style="{StaticResource OutlineWhiteButtonTheme}"
            Margin="354,31,90,31" 
            FontSize="18"
            Content="Hủy" />
        <TextBox
            Grid.Row="3"
            IsReadOnly="True"
            materialDesign:HintAssist.Hint="Số dư hiện tại"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="313,30,90,30"
            Width="222"
            FontSize="18"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"

            Text="{Binding SelectedSaving.Balance}"
            />

        <!--<CustomControls:EliteriaCalendarButton HorizontalAlignment="Left" Height="47" Margin="85,33,0,0" Grid.Row="4" VerticalAlignment="Top" Width="310"/>-->

    </Grid>
</UserControl>
