<UserControl x:Class="Eliteria.Views.MessageDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eliteria.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="10" Text="{Binding Title}" FontSize="16"/>
        <TextBlock Margin="10" Grid.Row="1">
            <AccessText TextWrapping="WrapWithOverflow" Text="{Binding Content}"/>
        </TextBlock>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Command="{Binding CloseCMD}" Content="Hủy" Margin="10" Style="{StaticResource OutlineWhiteButtonTheme}" Width="100"/>
            <Button Content="Đồng ý" Margin="10" Style="{StaticResource GreenButtonTheme}" Width="100"/>
        </StackPanel>
    </Grid>
</UserControl>
