        <ComboBox
            Style="{StaticResource ComboBox}"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="276,42,90,42"
            Width="259"
            FontSize="18"
            Background="White"
            DisplayMemberPath="AccountNumber"
            ItemsSource="{Binding SavingList}"
            SelectedItem="{Binding SelectedSaving, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
            IsEditable="True" 

            
